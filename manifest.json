{
  "manifest_version": 2,
  "name": "Nemlog-UF",
  "short_name": "Nemlog-UF",
  "author": "DAFU",
  "description": "閲覧中のNemlog記事の目次を生成します。",
  "version": "1.0",
  "icons": {
    "16":"./icon/icon_16.png",
    "48":"./icon/icon.png",
    "128":"./icon/icon_128.png"
  },
  "content_scripts": [{
    "matches" : ["https://nemlog.nem.social/*"],
    "js": ["./js/jquery.min.js","./js/read-time.min.js","./js/price.min.js","./js/toc.min.js","./js/imgur.min.js"],
    "css": ["./css/toc.min.css"]
  }],
  "permissions": ["*://api.dafu.cf/*","*://api.imgur.com/*/*"],
  "background": {
    "scripts":["./js/background.min.js"]
  },
  "options_ui": {
    "page": "./option.html",
    "open_in_tab": true
  },
  "applications": {
    "gecko": {
      "id": "nemlogtoc@dafu.cf"
    }
  }
}
